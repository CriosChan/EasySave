{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": ".",
          "files": [
            "EasySave/**/*.csproj",
            "EasyLog/**/*.csproj"
          ]
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "net10.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "out/docs/uml/**"
        ]
      }
    ],
    "output": "docs/_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "easy-save",
      "_appTitle": "easy-save",
      "_enableSearch": true,
      "pdf": false
    }
  }
}