<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="EasySave.App"
             RequestedThemeVariant="Default">
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Views/Styles/MainStyles.axaml"></StyleInclude>
    </Application.Styles>
    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryBackground">#2e2e3e</SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryBackground">#14000000</SolidColorBrush>
        <SolidColorBrush x:Key="BorderLine">#22000000</SolidColorBrush>
        <SolidColorBrush x:Key="ButtonSelected">#3e3e6e</SolidColorBrush>
    </Application.Resources>
</Application>
