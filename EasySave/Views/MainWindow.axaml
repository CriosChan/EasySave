<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:EasySave.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="EasySave.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding WindowTitle}"
        Icon="/Assets/avalonia-logo.ico"
        Width="1200"
        Height="760"
        MinWidth="1000"
        MinHeight="680"
        d:DesignWidth="1200"
        d:DesignHeight="760"
        Background="{DynamicResource PrimaryBackground}">

    <Grid Margin="16"
          RowDefinitions="Auto,*,Auto,Auto"
          ColumnDefinitions="2*,1*"
          RowSpacing="12"
          ColumnSpacing="12">

        <Border Grid.Row="0"
                Grid.ColumnSpan="2"
                Classes="main-section">
            <!-- SETTINGS -->
            <StackPanel Spacing="8">
                <TextBlock Text="{Binding CurrentSettingsLabel}"
                           FontWeight="SemiBold" />

                <WrapPanel ItemHeight="32" ItemWidth="150" VerticalAlignment="Center">
                    <Button Content="{Binding FrenchButtonLabel}"
                            Command="{Binding SetFrenchLanguageCommand}"
                            IsEnabled="{Binding IsNotBusy}"
                            Margin="0,0,8,0"/>
                    <Button Content="{Binding EnglishButtonLabel}"
                            Command="{Binding SetEnglishLanguageCommand}"
                            IsEnabled="{Binding IsNotBusy}"
                            Margin="0,0,24,0" />

                    <Button Content="{Binding JsonButtonLabel}"
                            Command="{Binding SetJsonLogTypeCommand}"
                            IsEnabled="{Binding IsNotBusy}"
                            Margin="0,0,8,0" />
                    <Button Content="{Binding XmlButtonLabel}"
                            Command="{Binding SetXmlLogTypeCommand}"
                            IsEnabled="{Binding IsNotBusy}" />
                </WrapPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="1"
                Grid.Column="0"
                Classes="main-section">
            <StackPanel Spacing="8">
                <TextBlock Text="{Binding JobsSectionTitle}"
                           Classes="section-title" />

                <ListBox ItemsSource="{Binding Jobs}"
                         SelectedItem="{Binding SelectedJob}">
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="vm:BackupJobItemViewModel">
                            <Border Classes="job-item">
                                <StackPanel Spacing="2">
                                    <TextBlock Text="{Binding DisplayName}"
                                               FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Type}" Opacity="0.8" />
                                    <TextBlock Text="{Binding DisplayPath}"
                                               TextWrapping="Wrap"
                                               Opacity="0.8" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <Border Grid.Row="1"
                Grid.Column="1"
                Classes="main-section">
            <StackPanel Spacing="8">
                <TextBlock Text="{Binding AddSectionTitle}"
                           Classes="section-title" />

                <TextBlock Text="{Binding NameLabel}" />
                <TextBox Text="{Binding NewJobName}"
                         IsEnabled="{Binding IsNotBusy}" />

                <TextBlock Text="{Binding SourceLabel}" />
                <TextBox Text="{Binding NewSourceDirectory}"
                         IsEnabled="{Binding IsNotBusy}" />

                <TextBlock Text="{Binding TargetLabel}" />
                <TextBox Text="{Binding NewTargetDirectory}"
                         IsEnabled="{Binding IsNotBusy}" />

                <TextBlock Text="{Binding TypeLabel}" />
                <ComboBox ItemsSource="{Binding BackupTypes}"
                          SelectedItem="{Binding SelectedBackupType}"
                          IsEnabled="{Binding IsNotBusy}" />

                <Button Content="{Binding AddButtonLabel}"
                        Command="{Binding AddJobCommand}"
                        IsEnabled="{Binding IsNotBusy}"
                        Margin="0,4,0,0" />

                <Separator Margin="0,8,0,8" />

                <Button Content="{Binding RemoveButtonLabel}"
                        Command="{Binding RemoveSelectedJobCommand}"
                        IsEnabled="{Binding IsNotBusy}" />
            </StackPanel>
        </Border>

        <Border Grid.Row="2"
                Grid.ColumnSpan="2"
                Classes="main-section">
            <WrapPanel ItemHeight="32" VerticalAlignment="Center">
                <Button Content="{Binding RunSelectedButtonLabel}"
                        Command="{Binding RunSelectedJobCommand}"
                        IsEnabled="{Binding IsNotBusy}"
                        Margin="0,0,8,0" />
                <Button Content="{Binding RunAllButtonLabel}"
                        Command="{Binding RunAllJobsCommand}"
                        IsEnabled="{Binding IsNotBusy}" />
            </WrapPanel>
        </Border>

        <Border Grid.Row="3"
                Grid.ColumnSpan="2"
                Classes="status-bar">
            <StackPanel Spacing="8">
                <TextBlock Text="{Binding StatusMessage}"
                           TextWrapping="Wrap" />

                <ProgressBar Minimum="0"
                             Maximum="100"
                             Value="{Binding OverallProgress}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
