<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:EasySave.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="EasySave.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding WindowTitle}"
        Icon="/Assets/avalonia-logo.ico"
        Width="1200"
        Height="760"
        MinWidth="1000"
        MinHeight="680"
        d:DesignWidth="1200"
        d:DesignHeight="760"
        Background="{DynamicResource PrimaryBackground}">

    <Grid Margin="16">
        <Grid IsVisible="{Binding IsMainScreen}"
              RowDefinitions="Auto,*,Auto,Auto"
              ColumnDefinitions="2*,1*"
              RowSpacing="12"
              ColumnSpacing="12">

            <Border Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Padding="12"
                    CornerRadius="8"
                    Background="{DynamicResource SecondaryBackground}"
                    BorderBrush="{DynamicResource BorderLine}"
                    BorderThickness="1">
                <StackPanel Spacing="8">
                    <TextBlock Text="{Binding CurrentSettingsLabel}"
                               FontWeight="SemiBold" />

                    <WrapPanel ItemHeight="32" ItemWidth="190" VerticalAlignment="Center">
                        <Button Content="{Binding FrenchButtonLabel}"
                                Command="{Binding SetFrenchLanguageCommand}"
                                IsEnabled="{Binding IsNotBusy}"
                                Margin="0,0,8,0"/>
                        <Button Content="{Binding EnglishButtonLabel}"
                                Command="{Binding SetEnglishLanguageCommand}"
                                IsEnabled="{Binding IsNotBusy}"
                                Margin="0,0,24,0" />

                        <Button Content="{Binding JsonButtonLabel}"
                                Command="{Binding SetJsonLogTypeCommand}"
                                IsEnabled="{Binding IsNotBusy}"
                                Margin="0,0,8,0" />
                        <Button Content="{Binding XmlButtonLabel}"
                                Command="{Binding SetXmlLogTypeCommand}"
                                IsEnabled="{Binding IsNotBusy}"
                                Margin="0,0,24,0" />

                        <Button Content="{Binding BusinessSoftwareScreenButtonLabel}"
                                Command="{Binding OpenBusinessSoftwareCatalogCommand}"
                                IsEnabled="{Binding IsNotBusy}" />
                    </WrapPanel>
                </StackPanel>
            </Border>

            <Border Grid.Row="1"
                    Grid.Column="0"
                    Padding="12"
                    CornerRadius="8"
                    Background="{DynamicResource SecondaryBackground}"
                    BorderBrush="{DynamicResource BorderLine}"
                    BorderThickness="1">
                <StackPanel Spacing="8">
                    <TextBlock Text="{Binding JobsSectionTitle}"
                               FontSize="18"
                               FontWeight="Bold" />

                    <ListBox ItemsSource="{Binding Jobs}"
                             SelectedItem="{Binding SelectedJob}"
                             CornerRadius="6"
                             BorderBrush="{DynamicResource BorderLine}"
                             BorderThickness="1">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="vm:BackupJobItemViewModel">
                                <Border Padding="8"
                                        Margin="0,6,0,6"
                                        CornerRadius="6"
                                        Background="#10000000"
                                        BorderBrush="{DynamicResource BorderLine}"
                                        BorderThickness="1">
                                    <StackPanel Spacing="2">
                                        <TextBlock Text="{Binding DisplayName}"
                                                   FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Type}" Opacity="0.8" />
                                        <TextBlock Text="{Binding DisplayPath}"
                                                   TextWrapping="Wrap"
                                                   Opacity="0.8" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <Border Grid.Row="1"
                    Grid.Column="1"
                    Classes="main-section">
                <StackPanel Spacing="8">
                    <TextBlock Text="{Binding AddSectionTitle}"
                               Classes="section-title" />

                    <TextBlock Text="{Binding NameLabel}" />
                    <TextBox Text="{Binding NewJobName}"
                             IsEnabled="{Binding IsNotBusy}" />

                    <TextBlock Text="{Binding SourceLabel}" />
                    <StackPanel Spacing="4">
                        <Button Command="{Binding BrowseSourceDirectoryCommand}"
                                IsEnabled="{Binding IsNotBusy}"
                                HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <PathIcon Data="M10 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2h-8l-2-2z"
                                          Width="16" Height="16" />
                                <TextBlock Text="{Binding BrowseSourceLabel}" />
                            </StackPanel>
                        </Button>
                        <TextBlock Text="{Binding NewSourceDirectory}"
                                   TextWrapping="Wrap"
                                   Opacity="0.7"
                                   FontSize="12"
                                   IsVisible="{Binding NewSourceDirectory, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                    </StackPanel>

                    <TextBlock Text="{Binding TargetLabel}" />
                    <StackPanel Spacing="4">
                        <Button Command="{Binding BrowseTargetDirectoryCommand}"
                                IsEnabled="{Binding IsNotBusy}"
                                HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <PathIcon Data="M10 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2h-8l-2-2z"
                                          Width="16" Height="16" />
                                <TextBlock Text="{Binding BrowseTargetLabel}" />
                            </StackPanel>
                        </Button>
                        <TextBlock Text="{Binding NewTargetDirectory}"
                                   TextWrapping="Wrap"
                                   Opacity="0.7"
                                   FontSize="12"
                                   IsVisible="{Binding NewTargetDirectory, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                    </StackPanel>

                    <TextBlock Text="{Binding TypeLabel}" />
                    <ComboBox ItemsSource="{Binding BackupTypes}"
                              SelectedItem="{Binding SelectedBackupType}"
                              IsEnabled="{Binding IsNotBusy}" />

                    <Button Content="{Binding AddButtonLabel}"
                            Command="{Binding AddJobCommand}"
                            IsEnabled="{Binding IsNotBusy}"
                            Margin="0,4,0,0" />

                    <Separator Margin="0,8,0,8" />

                    <Button Content="{Binding RemoveButtonLabel}"
                            Command="{Binding RemoveSelectedJobCommand}"
                            IsEnabled="{Binding IsNotBusy}" />
                </StackPanel>
            </Border>

            <Border Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Padding="12"
                    CornerRadius="8"
                    Background="{DynamicResource SecondaryBackground}"
                    BorderBrush="{DynamicResource BorderLine}"
                    BorderThickness="1">
                <WrapPanel ItemHeight="32" VerticalAlignment="Center">
                    <Button Content="{Binding RunSelectedButtonLabel}"
                            Command="{Binding RunSelectedJobCommand}"
                            IsEnabled="{Binding IsNotBusy}"
                            Margin="0,0,8,0" />
                    <Button Content="{Binding RunAllButtonLabel}"
                            Command="{Binding RunAllJobsCommand}"
                            IsEnabled="{Binding IsNotBusy}" />
                </WrapPanel>
            </Border>

            <Border Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Padding="12"
                    CornerRadius="8"
                    Background="#18003D7A"
                    BorderBrush="#33003D7A"
                    BorderThickness="1">
                <StackPanel Spacing="8">
                    <TextBlock Text="{Binding StatusMessage}"
                               TextWrapping="Wrap" />

                    <ProgressBar Minimum="0"
                                 Maximum="100"
                                 Value="{Binding OverallProgress}"
                                 Height="18" />
                </StackPanel>
            </Border>
        </Grid>

        <Grid IsVisible="{Binding IsSoftwareCatalogScreen}"
              RowDefinitions="Auto,Auto,*,Auto"
              RowSpacing="12">
            <Border Grid.Row="0"
                    Padding="12"
                    CornerRadius="8"
                    Background="{DynamicResource SecondaryBackground}"
                    BorderBrush="{DynamicResource BorderLine}"
                    BorderThickness="1">
                <Grid ColumnDefinitions="Auto,*,Auto"
                      ColumnSpacing="12">
                    <Button Grid.Column="0"
                            Content="{Binding BackButtonLabel}"
                            Command="{Binding BackFromSoftwareCatalogCommand}" />
                    <TextBlock Grid.Column="1"
                               Text="{Binding AvailableBusinessSoftwareTitle}"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />
                    <Button Grid.Column="2"
                            Content="{Binding ViewAddedBusinessSoftwareButtonLabel}"
                            Command="{Binding OpenAddedBusinessSoftwareCommand}" />
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    Padding="12"
                    CornerRadius="8"
                    Background="{DynamicResource SecondaryBackground}"
                    BorderBrush="{DynamicResource BorderLine}"
                    BorderThickness="1">
                <StackPanel Spacing="6">
                    <TextBlock Text="{Binding BusinessSoftwareSearchLabel}" />
                    <TextBox Text="{Binding BusinessSoftwareSearchText}"
                             Watermark="{Binding BusinessSoftwareSearchPlaceholder}" />
                </StackPanel>
            </Border>

            <Border Grid.Row="2"
                    Padding="12"
                    CornerRadius="8"
                    Background="{DynamicResource SecondaryBackground}"
                    BorderBrush="{DynamicResource BorderLine}"
                    BorderThickness="1">
                <ListBox ItemsSource="{Binding FilteredBusinessSoftware}">
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="vm:SelectableBusinessSoftwareItemViewModel">
                            <Border Padding="8"
                                    Margin="0,4,0,4"
                                    CornerRadius="6"
                                    Background="#10000000"
                                    BorderBrush="{DynamicResource BorderLine}"
                                    BorderThickness="1">
                                <CheckBox IsChecked="{Binding IsSelected}">
                                    <StackPanel Spacing="2">
                                        <TextBlock Text="{Binding DisplayName}"
                                                   FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding ProcessName}"
                                                   Opacity="0.75" />
                                    </StackPanel>
                                </CheckBox>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <Border Grid.Row="3"
                    Padding="12"
                    CornerRadius="8"
                    Background="{DynamicResource SecondaryBackground}"
                    BorderBrush="{DynamicResource BorderLine}"
                    BorderThickness="1">
                <StackPanel Orientation="Horizontal"
                            Spacing="8">
                    <Button Content="{Binding AddSelectedBusinessSoftwareButtonLabel}"
                            Command="{Binding AddSelectedBusinessSoftwareCommand}"
                            IsVisible="{Binding CanAddSelectedBusinessSoftware}" />
                </StackPanel>
            </Border>
        </Grid>

        <Grid IsVisible="{Binding IsAddedSoftwareScreen}"
              RowDefinitions="Auto,*,Auto"
              RowSpacing="12">
            <Border Grid.Row="0"
                    Padding="12"
                    CornerRadius="8"
                    Background="{DynamicResource SecondaryBackground}"
                    BorderBrush="{DynamicResource BorderLine}"
                    BorderThickness="1">
                <Grid ColumnDefinitions="Auto,*"
                      ColumnSpacing="12">
                    <Button Grid.Column="0"
                            Content="{Binding BackButtonLabel}"
                            Command="{Binding BackFromAddedSoftwareCommand}" />
                    <TextBlock Grid.Column="1"
                               Text="{Binding AddedBusinessSoftwareTitle}"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center" />
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    Padding="12"
                    CornerRadius="8"
                    Background="{DynamicResource SecondaryBackground}"
                    BorderBrush="{DynamicResource BorderLine}"
                    BorderThickness="1">
                <ListBox ItemsSource="{Binding AddedBusinessSoftware}">
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="vm:SelectableBusinessSoftwareItemViewModel">
                            <Border Padding="8"
                                    Margin="0,4,0,4"
                                    CornerRadius="6"
                                    Background="#10000000"
                                    BorderBrush="{DynamicResource BorderLine}"
                                    BorderThickness="1">
                                <CheckBox IsChecked="{Binding IsSelected}">
                                    <StackPanel Spacing="2">
                                        <TextBlock Text="{Binding DisplayName}"
                                                   FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding ProcessName}"
                                                   Opacity="0.75" />
                                    </StackPanel>
                                </CheckBox>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <Border Grid.Row="2"
                    Padding="12"
                    CornerRadius="8"
                    Background="{DynamicResource SecondaryBackground}"
                    BorderBrush="{DynamicResource BorderLine}"
                    BorderThickness="1">
                <StackPanel Orientation="Horizontal"
                            Spacing="8">
                    <Button Content="{Binding RemoveAddedBusinessSoftwareButtonLabel}"
                            Command="{Binding RemoveSelectedAddedBusinessSoftwareCommand}"
                            IsVisible="{Binding CanRemoveAddedBusinessSoftware}" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
