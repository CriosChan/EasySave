<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EasySave.Views.SoftwareCatalogScreen"
             xmlns:vm="using:EasySave.ViewModels"
             x:DataType="vm:MainWindowViewModel">
    <Grid
        IsVisible="{Binding IsSoftwareCatalogScreen}"
        RowDefinitions="Auto,Auto,*,Auto"
        RowSpacing="12">
        <Border Grid.Row="0"
                Padding="12"
                CornerRadius="8"
                Background="{DynamicResource SecondaryBackground}"
                BorderBrush="{DynamicResource BorderLine}"
                BorderThickness="1">
            <Grid ColumnDefinitions="Auto,*,Auto"
                  ColumnSpacing="12">
                <Button Grid.Column="0"
                        Content="{Binding BackButtonLabel}"
                        Command="{Binding BackFromSoftwareCatalogCommand}" />
                <TextBlock Grid.Column="1"
                           Text="{Binding BusinessSoftware.AvailableBusinessSoftwareTitle}"
                           FontSize="18"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
                <Button Grid.Column="2"
                        Content="{Binding BusinessSoftware.ViewAddedBusinessSoftwareButtonLabel}"
                        Command="{Binding OpenAddedBusinessSoftwareCommand}" />
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Padding="12"
                CornerRadius="8"
                Background="{DynamicResource SecondaryBackground}"
                BorderBrush="{DynamicResource BorderLine}"
                BorderThickness="1">
            <StackPanel Spacing="6">
                <TextBlock Text="{Binding BusinessSoftware.BusinessSoftwareSearchLabel}" />
                <TextBox Text="{Binding BusinessSoftware.BusinessSoftwareSearchText}"
                         Watermark="{Binding BusinessSoftware.BusinessSoftwareSearchPlaceholder}" />
            </StackPanel>
        </Border>

        <Border Grid.Row="2"
                Padding="12"
                CornerRadius="8"
                Background="{DynamicResource SecondaryBackground}"
                BorderBrush="{DynamicResource BorderLine}"
                BorderThickness="1">
            <ListBox ItemsSource="{Binding BusinessSoftware.FilteredBusinessSoftware}">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="vm:SelectableBusinessSoftwareItemViewModel">
                        <Border Padding="8"
                                Margin="0,4,0,4"
                                CornerRadius="6"
                                Background="#10000000"
                                BorderBrush="{DynamicResource BorderLine}"
                                BorderThickness="1">
                            <CheckBox IsChecked="{Binding IsSelected}">
                                <StackPanel Spacing="2">
                                    <TextBlock Text="{Binding DisplayName}"
                                               FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding ProcessName}"
                                               Opacity="0.75" />
                                </StackPanel>
                            </CheckBox>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <Border Grid.Row="3"
                Padding="12"
                CornerRadius="8"
                Background="{DynamicResource SecondaryBackground}"
                BorderBrush="{DynamicResource BorderLine}"
                BorderThickness="1">
            <StackPanel Orientation="Horizontal"
                        Spacing="8">
                <Button Content="{Binding BusinessSoftware.AddSelectedBusinessSoftwareButtonLabel}"
                        Command="{Binding BusinessSoftware.AddSelectedBusinessSoftwareCommand}"
                        IsVisible="{Binding BusinessSoftware.CanAddSelectedBusinessSoftware}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>